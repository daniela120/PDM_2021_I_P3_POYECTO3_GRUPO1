<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".ListarProductos">

    <TextView
        android:id="@+id/txvTITULO14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRODUCTOS"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow3"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <Button
        android:id="@+id/btn_regresarListarProducto"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:background="@android:color/transparent"
        android:foreground="@mipmap/ic_atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@mipmap/ic_atras" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:stretchColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <TableRow
        android:layout_width="255dp"
        android:layout_height="14dp">

        <TextView
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dip"
            android:text="     ID   "
            android:textAlignment="textStart" />

        <TextView
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dip"
            android:text="NOMBRE"
            android:textAlignment="center" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="3dip"
            android:text="DESCRIPCION"
            android:textAlignment="center" />

    </TableRow>

    <ListView
        android:id="@+id/list_productos"
        android:layout_width="312dp"
        android:layout_height="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>