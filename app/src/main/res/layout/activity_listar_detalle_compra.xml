<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".ListarDetalleCompra">

    <TextView
        android:id="@+id/txvTITULO10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETALLE COMPRA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow3"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <Button
        android:id="@+id/LISTARDC"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:background="@android:color/transparent"
        android:foreground="@mipmap/ic_atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@mipmap/ic_atras" />
    <TableLayout
        android:layout_width="356dp"
        android:layout_height="307dp"
        android:stretchColumns="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="255dp"
            android:layout_height="14dp">

            <TextView
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="3dip"
                android:text="     ID   "
                android:textAlignment="textStart" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="3dip"
                android:text="IDCOMPRA"
                android:textAlignment="center" />

            <TextView
                android:layout_width="138dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="3dip"
                android:text="CANTIDAD"
                android:textAlignment="center" />

        </TableRow>

        <ListView
            android:id="@+id/list_detalle_compras"
            android:layout_width="312dp"
            android:layout_height="264dp"
            android:layout_gravity="center"
            android:entries="@array/valoresPuesto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.528">


        </ListView>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>